<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fga.mds.gpp.trezentos.View.LoginActivity"
    android:background="@drawable/backgroundtrezentos">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/logoImage"
        android:src="@drawable/trezentoslogo"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/forgotPassTextEmail"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:inputType="textEmailAddress"

        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/logoImage" />

    <Button
        android:id="@+id/buttonForgotPassEmail"
        android:text="Enviar"

        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/selector_button"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassTextEmail" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/buttonReturnLogin"
        android:text="Retornar"
        android:textSize="13sp"
        android:textColor="#6000"
        android:background="@android:color/transparent"

        android:layout_marginBottom="7dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonForgotPassEmail" />

</android.support.constraint.ConstraintLayout>
